	journal = {AIDS and behavior},
	author = {Kumar, Navin and Forastiere, Laura and Janmohamed, Kamila and Yang, Fan and Zhang, Tiange and Sha, Yongjie and Tucker, Joseph D. and Tang, Weiming and Alexander, Marcus},
